# Ví dụ .env cho dự án FastAPI + SQLAlchemy + Alembic

# App
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database (SQLAlchemy URI using PyMySQL)
# Format: mysql+pymysql://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/webmypham

# (Thay thế bằng từng biến nếu bạn muốn)
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=webmypham

# Uvicorn / server
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
RELOAD=true

# CORS (phân tách bằng dấu phẩy)
CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# Mail (tùy chọn)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=your-email-password
